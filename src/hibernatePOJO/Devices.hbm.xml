<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernatePOJO.Devices" table="devices" schema="test">
        <id name="did">
            <column name="did" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="devicetype">
            <column name="devicetype" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="type">
            <column name="type" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="serialno">
            <column name="serialno" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="iPaddress">
            <column name="IPaddress" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="port">
            <column name="port" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="extra">
            <column name="extra" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="isSms">
            <column name="isSMS" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="isAlart">
            <column name="isAlart" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="isPlartform">
            <column name="isPlartform" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>