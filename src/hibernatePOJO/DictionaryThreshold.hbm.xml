<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernatePOJO.DictionaryThreshold" table="dictionary_threshold" schema="test">
        <id name="id">
            <column name="id" sql-type="int(20)"/>
        </id>
        <property name="addr">
            <column name="addr" sql-type="int(20)" not-null="true"/>
        </property>
        <property name="description">
            <column name="description" sql-type="longtext" not-null="true"/>
        </property>
        <property name="functioncode">
            <column name="functioncode" sql-type="int(255)"/>
        </property>
    </class>
</hibernate-mapping>