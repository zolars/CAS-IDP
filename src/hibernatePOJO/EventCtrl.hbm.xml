<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernatePOJO.EventCtrl" table="event_ctrl" schema="test">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="did">
            <column name="did" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="time">
            <column name="time" sql-type="datetime"/>
        </property>
        <property name="eventType">
            <column name="eventType" sql-type="int(11)"/>
        </property>
        <property name="description">
            <column name="description" sql-type="String(255)" precision="255" not-null="true"/>
        </property>
        <property name="alarm">
            <column name="alarm" sql-type="String(255)" precision="255" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>