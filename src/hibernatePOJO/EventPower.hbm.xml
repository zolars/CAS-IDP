<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernatePOJO.EventPower" table="event_power" schema="Test">
        <id name="epid">
            <column name="epid" sql-type="int(11)"/>
        </id>
        <property name="mpid">
            <column name="mpid" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(255)"/>
        </property>
        <property name="location">
            <column name="location" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="type">
            <column name="type" sql-type="varchar(255)"/>
        </property>
        <property name="content">
            <column name="content" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="occurtime">
            <column name="occurtime" sql-type="datetime" not-null="true"/>
        </property>
        <property name="ppid">
            <column name="ppid" sql-type="int(11)"/>
        </property>
        <property name="signature">
            <column name="signature" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="annotation">
            <column name="annotation" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>