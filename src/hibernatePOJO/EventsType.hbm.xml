<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernatePOJO.EventsType" table="events_type" schema="test">
        <id name="cid">
            <column name="cid" sql-type="int(11)"/>
        </id>
        <property name="code">
            <column name="code" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="pid">
            <column name="pid" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="type">
            <column name="type" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="subtype">
            <column name="subtype" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="devicename">
            <column name="devicename" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="prior">
            <column name="prior" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="classify">
            <column name="classify" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="zbj">
            <column name="zbj" sql-type="smallint(6)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>