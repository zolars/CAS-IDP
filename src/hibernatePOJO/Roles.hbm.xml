<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernatePOJO.Roles" table="roles" schema="test">
        <id name="rid">
            <column name="rid" sql-type="varchar(255)"/>
        </id>
        <property name="rolesname">
            <column name="rolesname" sql-type="varchar(255)"/>
        </property>
        <property name="extra">
            <column name="extra" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>